<h1>イベント会場編集</h1>

<div>
    <%= form_with model: @event, url: admins_event_path(@event), method: :patch, local: true do |f| %>
    <div>
        <label>イベント会場画像：</label>
        <%= f.attachment_field :image %>
    </div>
    <div>
        <label>イベント名：</label>
        <%= f.text_field :eventname %>
    </div>
    <div>
        <label>住所</label>
        <%= f.text_area :address %>
    </div>
    <div>
        <label>サイトURL</label>
        <%= f.text_field :siteurl %>
    </div>
    <div>
        <label>イベント会場概要欄</label>
        <%= f.text_area :comment %>
    </div>
    
    <%= f.submit '変更を保存' %>
    <% end %>
</div>
    