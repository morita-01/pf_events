<div class="container">
  <h1>イベント会場編集</h1>
  <% if @event.errors.any? %><!-- @eventのエラー情報チェック -->
    <div id="error_explanation">
      <!-- 下記は@eventのエラーの数をカウントして数値を出力 -->
      <h3><%= @event.errors.count %>errors prohibited this event from being saved:</h3>
      <!-- @eventのエラーメッセージを表示する -->
      <ul>
        <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div>
        <%= form_with model: @event, url: publics_event_path(@event), method: :patch, local: true do |f| %>
        <div class="row">
            <div class="col-lg-3"><label class="lb">イベント会場画像：</label></div>
            <div class="col-lg-9"><%= f.attachment_field :image %></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><label class="lb">イベント名：</label></div>
            <div class="col-lg-9"><%= f.text_field :eventname %></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><label class="lb">住所：</label></div>
            <div class="col-lg-9"><%= f.text_area :address %></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><label class="lb">サイトURL：</label></div>
            <div class="col-lg-9"><%= f.text_field :siteurl %></div>
        </div>
        <div class="row">
            <div class="col-lg-3"><label class="lb">イベント会場概要欄：</label></div>
            <div class="col-lg-9"><%= f.text_area :comment %></div>
        </div>
            <%= f.submit '変更を保存' %>
        <% end %>
    </div>
</div>    